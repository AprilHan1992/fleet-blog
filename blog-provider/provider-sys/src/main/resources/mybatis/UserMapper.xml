	</sql>

    <insert id="insert" parameterType="com.fleet.common.entity.user.User" useGeneratedKeys="true" keyProperty="userId">
        insert into `user` (
        <trim suffixOverrides=",">
            <if test="userName != null">`user_name`,</if>
            <if test="nickName != null">`nick_name`,</if>
            <if test="email != null">`email`,</if>
            <if test="userPwd != null">`user_pwd`,</if>
            <if test="pwdSalt != null">`pwd_salt`,</if>
            <if test="single != null">`single`,</if>
            <if test="userState != null">`user_state`,</if>
            <if test="userRegTime != null">`user_reg_time`,</if>
            <if test="deleted != null">`deleted`,</if>
